<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newfly.mapper.PlayerMapper">

    <!-- 查询用户名和密码-->
    <select id="login" parameterType="player" resultType="player">
        select id,
               name,
               profession,
               grade,
               scene,
               exp,
               money,
               x,
               y
        from player
        where name = #{name}
          and password = #{password}
    </select>

    <!-- 查询任务-->
    <select id="queryTask" parameterType="string" resultType="task">
        select id, task, sub_task
        from player
        where id = #{id}
    </select>
</mapper>